<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white_color"
    android:orientation="vertical" >

    <include layout="@layout/em_app_titlebar" />

    <GridView
        android:id="@+id/child_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y15"
        android:cacheColorHint="@android:color/transparent"
        android:columnWidth="@dimen/x180"
        android:gravity="center"
        android:horizontalSpacing="@dimen/x10"
        android:listSelector="@android:color/transparent"
        android:numColumns="auto_fit"
        android:padding="@dimen/x10"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/x10" >
    </GridView>

</LinearLayout>