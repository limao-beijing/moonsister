<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_appointment">

    <ImageView
        android:id="@+id/action_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/x30"
        android:padding="@dimen/y30"
        android:src="@mipmap/dynamic_logout" />

    <com.moonsister.tcjy.widget.RoundedImageView
        android:id="@+id/iv_user_icon"
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/y120"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/load_small" />

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x15"
        android:text="@string/xml_send_red_packet"
        android:textColor="@color/text_black_color" />

    <EditText
        android:id="@+id/et_input_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/x30"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x30"
        android:background="@mipmap/input_redpacket"
        android:cursorVisible="true"
        android:gravity="center"
        android:hint="@string/input_money"
        android:inputType="number"
        android:textColor="@color/text_black_color"
        android:textColorHint="@color/text_black_color" />

    <GridView
        android:id="@+id/gv_pic_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y20"
        android:horizontalSpacing="@dimen/x30"
        android:numColumns="3"
        android:verticalSpacing="@dimen/x30"></GridView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_weixin_play"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x90"
            android:layout_marginLeft="@dimen/x100"
            android:layout_marginTop="@dimen/y30"
            android:background="@drawable/shape_background_text_white_color"
            android:gravity="center"
            android:text="@string/weixin_play"
            android:textColor="@color/text_black_color" />

        <TextView
            android:id="@+id/tv_aliplay_play"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x90"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x100"
            android:layout_marginTop="@dimen/y30"
            android:background="@drawable/shape_background_text_white_color"
            android:gravity="center"
            android:text="@string/aliplay_play"
            android:textColor="@color/text_black_color" />
    </RelativeLayout>
</LinearLayout>