<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

    >

    <LinearLayout
        android:id="@+id/umeng_update_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:background="@drawable/app_update_dialog_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/x68"
            android:layout_marginTop="@dimen/y30"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/umeng_update_id_cancel"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x60"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/y45"
                android:background="@drawable/update_button_cancel"

                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:text="发现新版本"
                android:textColor="@color/text_black_color"
                android:textSize="@dimen/x32"
                android:visibility="gone"
                />

        </RelativeLayout>

        <!--<ScrollView-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="@dimen/x30"-->
        <!--android:layout_marginRight="@dimen/x30"-->

        <!--&gt;-->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/umeng_update_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:lineSpacingExtra="@dimen/x5"
                android:textColor="#000"
                android:textSize="@dimen/text_size_14"/>
        </LinearLayout>
        <!--</ScrollView>-->

        <Button
            android:id="@+id/umeng_update_id_ok"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x68"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/y30"
            android:layout_marginTop="@dimen/x50"
            android:background="@drawable/update_button_ok"
            android:gravity="center"
            android:paddingLeft="@dimen/y50"
            android:paddingRight="@dimen/y50"
            android:text="@string/pdateNow"
            android:textColor="@color/white"
            android:textSize="@dimen/x32"/>
    </LinearLayout>

</RelativeLayout>